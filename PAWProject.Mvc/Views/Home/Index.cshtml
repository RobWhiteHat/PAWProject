@* @model PAWProject.Models.DTO.SpaceFlightDTOs.SpaceApiDTO *@
@{
    ViewData["Title"] = "Noticias Espaciales 🛰️";
}

<div class="container py-4">
    <h1 class="text-center mb-4">
        <i class="bi bi-rocket-takeoff text-primary me-2"></i>
        Últimas Noticias del Espacio
    </h1>

    @* Mensajes de feedback para upload y creación de fuentes *@
    @if (TempData["UploadSuccess"] != null)
    {
        <div class="alert alert-success" role="alert">@TempData["UploadSuccess"]</div>
    }
    @if (TempData["UploadError"] != null)
    {
        <div class="alert alert-danger" role="alert">@TempData["UploadError"]</div>
    }
    @if (TempData["SourceSuccess"] != null)
    {
        <div class="alert alert-success" role="alert">@TempData["SourceSuccess"]</div>
    }
    @if (TempData["SourceError"] != null)
    {
        <div class="alert alert-danger" role="alert">@TempData["SourceError"]</div>
    }

    @* Botón y modales solo visibles para Admin *@
    @if (User.IsInRole("Admin"))
    {
        <div class="mb-3">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#uploadModal">
                Cargar noticia (JSON)
            </button>

            <button class="btn btn-outline-secondary ms-2" data-bs-toggle="modal" data-bs-target="#createSourceModal">
                Agregar fuente
            </button>
        </div>

        @* Modal para subir archivo JSON *@
        <div class="modal fade" id="uploadModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <form asp-action="UploadJson" asp-controller="Admin" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Cargar noticia (JSON)</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label">Archivo JSON</label>
                                <input name="jsonFile" id="jsonFile" type="file" accept=".json,application/json" class="form-control" required />
                                <div class="form-text">Seleccione el archivo .json descargado (máx 5 MB).</div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-primary btn-carga-json" disabled>Subir</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        @* Modal para crear nueva fuente *@
        <div class="modal fade" id="createSourceModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <form asp-action="CreateSource" asp-controller="Admin" method="post">
                    @Html.AntiForgeryToken()
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Agregar Fuente</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label">Nombre</label>
                                <input name="Name" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">URL</label>
                                <input name="Url" type="url" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Descripción</label>
                                <textarea name="Description" class="form-control"></textarea>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Component Type</label>
                                <select name="ComponentType" class="form-select" required>
                                    <option value="REST" selected>REST</option>
                                    <option value="API">API</option>
                                    <option value="DB">DB</option>
                                    <option value="WIDGET">Widget</option>
                                </select>
                            </div>


                            <div class="form-check">
                                <input name="RequiresSecret" type="checkbox" class="form-check-input" id="requiresSecret" value="true" />
                                <label class="form-check-label" for="requiresSecret">Requires Secret?</label>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Crear</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    }

    <div id="articlesContainer" class="row row-cols-1 row-cols-md-3 g-4"></div>

    <div id="loader" class="text-center my-3" style="display:none;">
        <div class="spinner-border"></div>
    </div>
</div>

@section Scripts {
    <script src="~/js/lazyloadingarticles.js"></script>
    <script src="~/js/sourcebuttons.js"></script>
    <script src="~/js/site.js"></script>
}